# Census3 BigQuery Service Configuration
# Copy this file to .env and configure your values

# Required: GCP Project ID for BigQuery
CENSUS3_PROJECT=your-gcp-project-id

# Service Configuration
CENSUS3_PERIOD=1h
CENSUS3_API_PORT=8080
CENSUS3_STORAGE_PATH=/app/data/snapshots.json

# BigQuery Configuration
CENSUS3_MIN_BALANCES=0.25,1.0,5.0
CENSUS3_MAX_COUNT=1000

# Census Configuration
CENSUS3_HOST=https://sequencer1.davinci.vote
CENSUS3_BATCH_SIZE=5000

# GitHub Storage Configuration (Optional)
# Enable GitHub storage mode to store snapshots in a Git repository
CENSUS3_GITHUB_ENABLED=false
CENSUS3_GITHUB_PAT=your-github-personal-access-token
CENSUS3_GITHUB_REPO=https://github.com/your-org/your-repo

# Google Cloud Credentials (Optional)
# Path to service account key file if not using default credentials
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Docker Configuration
RESTART=unless-stopped
